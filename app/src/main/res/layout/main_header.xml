<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content"
    android:id="@+id/header_title"
    >

    <ImageView
        android:id="@+id/profile_drawer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/black" />

    <TextView
        android:id="@+id/names_drawer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_drawer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ricardo" />

    <TextView
        android:id="@+id/email_drawer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="suport@gmail.com"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/names_drawer"
        app:layout_constraintStart_toStartOf="@+id/names_drawer"
        app:layout_constraintTop_toBottomOf="@id/names_drawer"/>
</androidx.constraintlayout.widget.ConstraintLayout>